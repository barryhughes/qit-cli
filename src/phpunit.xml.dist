<?xml version="1.0"?>
<phpunit
        bootstrap="./tests/bootstrap.php"
        backupGlobals="false"
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
>
    <testsuites>
        <testsuite name="QIT_CLI">
            <directory suffix="Test.php">tests</directory>
        </testsuite>
    </testsuites>
    <extensions>
        <extension class="DeleteConfigFileListener" file="./tests/DeleteConfigFileListener.php"/>
    </extensions>
</phpunit>
